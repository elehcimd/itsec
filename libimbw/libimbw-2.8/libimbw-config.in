#!/bin/sh

libimbw_defines="@LIBIMBW_CONFIG_DEFINES@"
libimbw_cflags="@LIBIMBW_CONFIG_CFLAGS@"
libimbw_libs="@LIBIMBW_CONFIG_LIBS@"

usage()
{
        cat <<EOF
Usage: $0 [OPTIONS]
Options:
        [--libs]
        [--cflags]
        [--defines]
EOF
        exit
}

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac 

    case $1 in
        --libs)
            echo_libs=yes
            ;;

        --cflags)
            echo_cflags=yes
            ;;

        --defines)
            echo_defines=yes
            ;;
        *)
            usage 1
        esac
    shift
done

if test "$echo_libs" = "yes"; then
    echo $libimbw_libs
fi

if test "$echo_cflags" = "yes"; then
    echo $libimbw_cflags
fi

if test "$echo_defines" = "yes"; then
    echo $libimbw_defines
fi

# EOF
